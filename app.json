{
  "expo": {
    "name": "chromatic-tuner",
    "slug": "chromatic-tuner",
    "version": "1.0.4",
    "orientation": "portrait",
    "icon": "./assets/images/tuner-icon.png",
    "scheme": "chromatictuner",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.danmolloy.chromatictuner",
      "buildNumber": "6",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app uses your microphone to detect and analyze pitch when tuning your instrument. For example, it listens to the pitch of each string and helps you tune your guitar accurately."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.danmolloy.chromatictuner",
      "permissions": [
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-tuner-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-font",
      [
        "expo-audio",
        {
          "microphonePermission": "Allow Chromatic Tuner to access your microphone."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "bcb4201a-b789-4470-bf13-215696de3bcd"
      }
    }
  }
}
